---
import GradientButton from "../components/GradientButton.astro";
import BasePageLayout from "../layouts/BasePageLayout.astro";

const sections = ["News", "Television", "Appearances", "NASA"];

const videos = {
  News: [
    { id: "lwFnb1RNX0Y", title: "The Daily Show" },
    { id: "CDPrBqlig2U", title: "Good Morning America (Moonshot)" },
    {
      title: "Fox News (Commercial Lander)",
      thumbnail_name: "fox_news_commercial_lander",
      link: "https://www.foxnews.com/video/6342594637112",
    },
    { id: "bwIuoIQGX48", title: "GMA3 Extended Book Talk" },
    { id: "GxKXketbmpw", title: "The 11th Hour with Brian Williams" },
    { id: "XjLh4WgqDUw", title: "Erin Burnett Out Front" },
    {
      title: "CNN",
      thumbnail_name: "cnn",
      link: "https://www.cnn.com/videos/tv/2020/05/30/spacex-nasa-launch-aims-to-make-history.cnn",
    },
    { id: "AC1T6Gm6CCQ", title: "Today (SpaceX Launch Appearance)" },
    {
      title: "Good Morning America (Whitson)",
      thumbnail_name: "good_morning_america",
      link: "https://abcnews.go.com/GMA/video/us-astronaut-blasts-history-books-46979317",
    },
    { id: "zzYOUVbbWdw", title: "Today (Astroid Appearance)" },
  ],
  Television: [
    {
      title: "Netflix: Worn Stories",
      thumbnail_name: "netflix_worn_stories",
      link: "https://player.vimeo.com/video/648871234?h=ce8858b01e",
    },
    { id: "ZWMl9BwBQ2g", title: "Late Show with David Letterman" },
    { id: "gMZNx7bxZes", title: "Big Bang Theory Clip" },
    { id: "QoR3Un2Ws24", title: "Additional Big Bang Theory Clip" },
  ],
  Appearances: [
    { id: "d8a8DpmTsNk", title: "Smithsonian's National Air and Space Museum" },
    { id: "t6eftfDJ9fQ", title: "Adam Savage's Tested" },
    { id: "1-9kiNFIBzo", title: "EQ Portrait" },
  ],
  NASA: [
    { id: "mwTNPMpCCMM", title: "Mike's Spacewalk" },
    { id: "akw6XBjD5ho", title: "ISS Science Garage" },
    { id: "rxOZUBDBo3I", title: "Gravity Congratulations" },
  ],
};
---

<BasePageLayout pageTitle="Media" description="A variety of clips of Mike on TV and the news.">
  <h1 class="my-5 text-center font-jost text-header lg:text-4xl xl:mt-12">Mike in the Media</h1>

  <hr class="mx-auto mb-5 w-40 border-lightgray xl:mb-8" />

  <div class="flex flex-col lg:flex-row lg:items-start">
    <p class="text-md text-center font-roboto text-gray lg:ml-16 lg:mr-3 lg:max-w-2xl lg:text-left lg:text-lg lg:leading-relaxed">
      In addition to speaking, Mike is a frequent guest on television news programs, talk shows, late night TV, and even sitcoms including The Big Bang Theory.
      He has appeared on Wired, Netflix, Good Morning America, Late Show with David Letterman, Fox News, Today, CNN, and more. Check out some highlights below.
      For media inquiries, contact him
      <a href="https://mikemassimino.paperform.co/" class="text-orange">here</a>!
    </p>

    <div class="mx-auto mt-4 flex-shrink-0 lg:ml-6 lg:mt-0">
      <a href="https://youtu.be/J1uCJAik83s" target="_blank" rel="noopener noreferrer" data-fslightbox="https://youtu.be/J1uCJAik83s">
        <div>
          <img src="https://i1.ytimg.com/vi/J1uCJAik83s/mqdefault.jpg" class="aspect-video w-64 rounded-lg outline outline-4 outline-blue lg:w-80"  alt="Mike in the Media"/>
          <p class="mt-2 w-64 text-center font-roboto text-lg text-gray lg:mt-4 lg:w-80 lg:text-lg">Introduction to Mike Massimino</p>
        </div>
      </a>
    </div>
  </div>

  {
    sections.map((section) => (
      <div>
        <h2 class="mb-6 ml-8 mt-8 font-exo text-3xl text-red">{section}</h2>
        <div class="mt-4 flex flex-col gap-y-6 md:flex-row md:flex-wrap">
          {videos[section]?.map((video) => (
            <div class="relative mx-auto flex-shrink-0 md:mb-0 md:p-3">
              {video.mustWatch && <p class="absolute right-2 top-0 skew-y-12 bg-yellow p-1 font-exo text-black lg:text-xl">MUST WATCH!</p>}

              <a
                href={video.id ? `https://www.youtube.com/watch?v=${video.id}` : video.link}
                target="_blank"
                rel="noopener noreferrer"
                data-fslightbox={video.id ? "gallery" : undefined}
              >
                <div>
                  <img
                    src={video.id ? `https://i1.ytimg.com/vi/${video.id}/mqdefault.jpg` : `/img/media/${video.thumbnail_name}.jpg`}
                    alt={video.title}
                    class="aspect-video w-64 rounded-lg outline outline-4 outline-blue lg:w-80"
                  />
                  <p class="mt-2 w-64 text-center font-roboto text-lg text-gray lg:mt-4 lg:w-80 lg:text-lg">{video.title}</p>
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>
    ))
  }
</BasePageLayout>

<script>
  // @ts-ignore
  import fsLightbox from "fslightbox";
</script>
